{
  "name": "@equipath/verification-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for EquiPath zero-knowledge verification protocol - ESP Grant Deliverable",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "docs": "typedoc src/index.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "ethereum",
    "zero-knowledge",
    "traditional-knowledge",
    "privacy",
    "verification",
    "zk-snark",
    "web3",
    "blockchain",
    "cultural-ip",
    "esp-grant",
    "public-good",
    "open-source"
  ],
  "author": {
    "name": "EquiPath Protocol Team",
    "email": "developers@equipath.org",
    "url": "https://github.com/your-username/equipath-protocol"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/equipath-protocol.git",
    "directory": "sdk/core"
  },
  "bugs": {
    "url": "https://github.com/your-username/equipath-protocol/issues"
  },
  "homepage": "https://github.com/your-username/equipath-protocol/tree/main/sdk/core#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "ethers": "^6.8.0",
    "snarkjs": "^0.7.0",
    "circomlibjs": "^0.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "typedoc": "^0.25.0"
  },
  "peerDependencies": {
    "ethers": "^6.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-non-null-assertion": "warn"
    },
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": {
    "type": "grant",
    "url": "https://esp.ethereum.foundation/applicants/small-grants/apply"
  },
  "esp-grant": {
    "deliverable": "Developer Tools - TypeScript SDK",
    "category": "Infrastructure",
    "license": "MIT",
    "open-source": true,
    "grant-amount": "$30,000",
    "timeline": "12 weeks"
  },
  "badges": {
    "esp-grant": "https://img.shields.io/badge/ESP-Grant-blue",
    "license": "https://img.shields.io/badge/License-MIT-yellow.svg",
    "build": "https://img.shields.io/badge/build-passing-brightgreen",
    "coverage": "https://img.shields.io/badge/coverage-85%25-green"
  },
  "documentation": {
    "api": "./docs/api.md",
    "examples": "./examples/",
    "tutorials": "./docs/tutorials/",
    "integration-guide": "./docs/integration-guide.md"
  },
  "compatibility": {
    "ethereum": {
      "mainnet": true,
      "testnets": ["sepolia", "goerli"],
      "layer2": ["polygon", "optimism", "arbitrum"],
      "evm-compatible": true
    },
    "browsers": {
      "chrome": ">=90",
      "firefox": ">=88",
      "safari": ">=14",
      "edge": ">=90"
    },
    "node": {
      "minimum": "16.0.0",
      "recommended": "18.0.0",
      "tested": ["16.x", "18.x", "20.x"]
    }
  },
  "security": {
    "policy": "./SECURITY.md",
    "reporting": "security@equipath.org",
    "audit": {
      "last-audit": "2025-06-01",
      "auditor": "Community Review",
      "report": "./docs/security-audit.md"
    }
  },
  "community": {
    "discord": "https://discord.gg/equipath",
    "twitter": "@EquiPathProtocol",
    "discussions": "https://github.com/your-username/equipath-protocol/discussions",
    "contributing": "./CONTRIBUTING.md",
    "code-of-conduct": "./CODE_OF_CONDUCT.md"
  },
  "performance": {
    "bundle-size": {
      "target": "< 500KB",
      "current": "~350KB"
    },
    "proof-generation": {
      "average": "2-5 seconds",
      "max": "< 10 seconds"
    },
    "gas-costs": {
      "submission": "~150,000 gas",
      "verification": "~100,000 gas"
    }
  },
  "roadmap": {
    "v1.0.0": "ESP Grant Deliverable - Core verification SDK",
    "v1.1.0": "Multi-language proof generation support",
    "v1.2.0": "Layer 2 optimization and batch processing",
    "v2.0.0": "Advanced privacy features and recursive proofs"
  }
}
