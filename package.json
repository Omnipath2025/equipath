{
  "name": "equipath-protocol",
  "version": "1.0.0",
  "description": "Privacy-preserving verification protocol for traditional knowledge protection on Ethereum",
  "main": "sdk/core/src/index.ts",
  "scripts": {
    "build": "tsc",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "circuits:compile": "node scripts/setup/compile-circuits.js",
    "deploy:testnet": "hardhat run scripts/deploy/deploy-testnet.js --network sepolia",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write ."
  },
  "keywords": [
    "ethereum",
    "zk-snarks",
    "traditional-knowledge",
    "privacy",
    "verification",
    "esp-grant"
  ],
  "author": "OmniPath Team",
  "license": "MIT",
  "dependencies": {
    "ethers": "^5.7.2",
    "snarkjs": "^0.7.0",
    "circomlib": "^2.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "typescript": "^5.1.6",
    "hardhat": "^2.17.1",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
